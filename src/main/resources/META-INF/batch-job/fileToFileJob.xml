<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:batch="http://www.springframework.org/schema/batch" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-3.0.xsd
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
  ">
 
  <batch:job id="fileToFileJob">
    <batch:step id="step1" >
      <batch:tasklet>
        <batch:chunk reader="fileReader" writer="fileWriter" processor="myProcessor" commit-interval="1" />
      </batch:tasklet>
    </batch:step>
  </batch:job>
 
  <bean id="fileReader" class="com.batch.reader.FileReader">
    <property name="resource" value="classpath:META-INF/input/input" />
  </bean>
  
  <bean id="myProcessor" class="com.batch.processor.MyProcessor"/>
 
  <bean id="fileWriter" class="com.batch.writer.FileWriter">
    <property name="resource" value="classpath:META-INF/output/output" />
  </bean>
</beans>